$rs = $xoopsDB->query( "SELECT post_id FROM xoops_d3forum_posts" ) ;
while( list( $post_id ) = $xoopsDB->fetchRow( $rs ) ) {
	list( $post_text ) = $xoopsDB->fetchRow( $xoopsDB->query( "SELECT post_text FROM xoops_d3forum_posts_text WHERE post_id=$post_id" ) ) ;
	$xoopsDB->queryF( "UPDATE xoops_d3forum_posts SET post_text='".addslashes($post_text)."' WHERE post_id=$post_id" ) ;
}


